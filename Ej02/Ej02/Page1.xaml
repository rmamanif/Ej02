<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ej02.Page1">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="First form"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"
                   >
            </Label>
            <Button Text="Next Page" Clicked="OnNextPageButtonClicked"></Button>
            <Button Text="Close" x:Name="btnClose"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>